#!/usr/bin/php
<?php

use Dotenv\Dotenv;
use Monolog\Logger;
use Monolog\Handler\StreamHandler;
use Zanzara\Zanzara;
use Components\ZanzaraConfig;

require __DIR__ . '/../vendor/autoload.php';

$dotenv = Dotenv::createImmutable(__DIR__ . '/../');
$dotenv->load();

$logger = new Logger('dastyarpro');
$logger->pushHandler(new StreamHandler(__DIR__ . '/../logs/'.date("Y-m-d").'.log', Logger::DEBUG));

$zanzara = new Zanzara($_ENV['BOT_TOKEN'], new ZanzaraConfig());

(new Bot($zanzara))->run();